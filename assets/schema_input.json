{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/OceanOmics-OceanGenomes-post-curation/master/assets/schema_input.json",
    "title": "OceanOmics-OceanGenomes-post-curation - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["sample"]
            },
            "hic_dir": {
                "type": "string",
                "format": "directory-path",
                "description": "Path to HiC fastq files",
                "errorMessage": "HiC directory must be provided",
                "meta": ["hic_dir"]
            },
            "assembly": {
                "type": "string",
                "format": "directory-path",
                "description": "Path to combined assembly file",
                "errorMessage": "Assembly file must be provided",
                "meta": ["assembly"]
            },
            "meryldb": {
                "type": "string",
                "format": "directory-path",
                "description": "Path to meryldb directory",
                "errorMessage": "Meryldb directory must be provided",
                "meta": ["meryldb"]
            },
            "agp": {
                "type": "string",
                "format": "directory-path",
                "description": "Path to AGP file",
                "errorMessage": "AGP file must be provided",
                "meta" : ["agp"]
            },
            "version": {
                "type": "string",
                "meta": ["version"]
            },
            "date": {
                "type": "string",
                "meta": ["date"]
            },
            "genomesize": {
                "type": "string",
                "meta": ["genomesize"]
            }
            },
            "required": ["sample", "hic_dir", "assembly", "meryldb", "agp", "version", "date", "genomesize"]
        }
    }
